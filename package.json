{
  "name": "@sugoi/mongodb",
  "version": "2.3.10",
  "description": "SugoiJS mongoDB",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config=jest.config.js --coverage --detectOpenHandles",
    "docs": "..\\node_modules\\.bin\\typedoc --out ..\\dist\\docs\\mongoDB --json dist\\docs\\main.json --ignoreCompilerErrors --excludeNotExported --excludeProtected --excludePrivate --readme .\\README.md --mode file --hideGenerator --gitRevision '1.0.0' --externalPattern node_modules/**/* --excludeExternals",
    "update:patch": " npm run build && npm version patch && npm publish && npm run docs",
    "update:minor": " npm run build && npm version minor && npm publish && npm run docs",
    "update:major": " npm run build && npm version major && npm publish && npm run docs",
    "build": "rmdir /S dist && tsc"
  },
  "keywords": [
    "@sugoi",
    "@sugoijs",
    "sugoi",
    "sugoijs",
    "mongoDB",
    "schema",
    "orm"
  ],
  "homepage": "sugoijs.com",
  "bugs": {
    "url": "https://github.com/sugoiJS/mongoDB/issues",
    "email": "oba.sugoi@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sugoiJS/mongoDB"
  },
  "files": [
    "dist/**/*"
  ],
  "author": "Orel Balilti",
  "license": "MIT",
  "dependencies": {
    "@sugoi/core": "2.1.3",
    "@sugoi/orm": "2.4.0",
    "mongodb": "^3.1.3"
  },
  "devDependencies": {
    "@types/mongodb": "^3.0.19",
    "@types/jest": "^23.3.2",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.1",
    "mongodb-memory-server": "^2.2.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./dist/coverage"
  }
}
